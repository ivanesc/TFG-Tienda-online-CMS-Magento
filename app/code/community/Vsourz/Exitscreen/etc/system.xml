<?xml version="1.0"?>
<config>
	<tabs>
		<exitscreen translate="label">
			<label>Exit Screen Pop-Up</label>
			<sort_order>160</sort_order>
		</exitscreen>
	</tabs>
	<sections>
		<exitscreen translate="label">
			<label>Exit Screen Pop-Up</label>
			<tab>exitscreen</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1000</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<settings>
					<label>General Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enable_extension translate="label comment">
                            <label>Enable Extension</label>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_extension>
						<loadjs translate="label">
							<label>Load JQuery Library</label>
							<comment><![CDATA[Select YES if JQuery library in not included in your Magento Project]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</loadjs>
						<pages>
							<label>Pages</label>
							<comment><![CDATA[Select the promotion block from the ID]]></comment>
							<frontend_type>multiselect</frontend_type>
							<source_model>exitscreen/source_page</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pages>
						<promotionblock>
							<label>Promotion Blocks</label>
							<comment><![CDATA[Select the promotion block from the ID]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>exitscreen/source_staticblock</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</promotionblock>
						<cookie translate="label">
                            <label>Cookie Interval</label>
							<comment><![CDATA[Total time<strong> (In Hours)</strong> cookie is stored]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</cookie>
						<delay translate="label">
                            <label>Delay PopUp</label>
							<comment><![CDATA[Total time <strong> (In Minutes)</strong> after which popup should appear]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>55</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</delay>
						<width translate="label">
                            <label>Pop-Up Width</label>
							<comment><![CDATA[Width of POP-UP window in px. Enter <strong>auto</strong> for automatic width]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</width>
						<height translate="label">
                            <label>Pop-Up Height</label>
							<comment><![CDATA[height of POP-UP window in px. Enter <strong>auto</strong> for automatic height]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</height>
					</fields>
				</settings>
			</groups>
		</exitscreen>
	</sections>
</config>